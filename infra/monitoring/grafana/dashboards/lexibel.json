{
  "dashboard": {
    "id": null,
    "uid": "lexibel-overview",
    "title": "LexiBel Overview",
    "tags": ["lexibel"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(lexibel_api_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "API Request Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(lexibel_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 {{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "BRAIN Actions",
        "targets": [
          {
            "expr": "rate(lexibel_brain_actions_total[5m])",
            "legendFormat": "{{action_type}} - {{status}}"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "graph",
        "title": "SENTINEL Conflicts",
        "targets": [
          {
            "expr": "rate(lexibel_sentinel_conflicts_detected[5m])",
            "legendFormat": "{{conflict_type}} - {{severity}}"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "type": "graph",
        "title": "PROPHET Predictions",
        "targets": [
          {
            "expr": "rate(lexibel_prophet_predictions_total[5m])",
            "legendFormat": "{{prediction_type}}"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "type": "graph",
        "title": "Timeline Events",
        "targets": [
          {
            "expr": "rate(lexibel_timeline_events_extracted[5m])",
            "legendFormat": "{{source_type}}"
          }
        ]
      }
    ]
  }
}
